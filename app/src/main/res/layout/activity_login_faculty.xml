<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".LoginFacultyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Top Illustration -->
        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/image_login_screen"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="Faculty Login Illustration"
            android:scaleType="centerInside" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faculty Login"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:textColor="@color/main_500"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome back! Please sign in to continue."
            android:textAlignment="center"
            android:textColor="@color/darker_gray"
            android:textSize="14sp"
            android:layout_marginBottom="30dp" />

        <!-- Email Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_email"
            style="@style/textInputLayout_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Faculty Email"
            android:layout_marginBottom="20dp"
            app:startIconDrawable="@drawable/icon_email"
            app:startIconTint="@color/main_500"
            app:hintTextColor="@color/main_500"
            app:boxStrokeColor="@color/main_500">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_password"
            style="@style/textInputLayout_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/main_500"
            app:startIconDrawable="@drawable/icon_password"
            app:startIconTint="@color/main_500"
            app:hintTextColor="@color/main_500"
            app:boxStrokeColor="@color/main_500"
            android:layout_marginBottom="30dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Login Button -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Login"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            style="@style/button_style"
            android:background="@drawable/style_button"
            android:layout_marginBottom="16dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Back"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/darker_gray"
            android:textColor="@color/black" />

        <!-- Help Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use your @saec.ac.in email address"
            android:textColor="@color/darker_gray"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:textStyle="italic" />

    </LinearLayout>
</ScrollView>