<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/gradient_blue"
    tools:context=".SelectAttendanceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“š Mark Attendance"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp" />

        <!-- Main Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="12dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Student Information Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/light_blue_50"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tv_student_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading student information..."
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:lineSpacingExtra="4dp" />
                </androidx.cardview.widget.CardView>

                <!-- Session Information Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/green_50"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tv_session_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Searching for active sessions..."
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:lineSpacingExtra="4dp" />
                </androidx.cardview.widget.CardView>

                <!-- Classroom Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/classroom"
                    android:contentDescription="Classroom"
                    app:cardCornerRadius="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">

            <!-- Mark Present Button -->
            <Button
                android:id="@+id/btn_mark_present"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/style_button_large"
                android:drawableEnd="@drawable/hand_raise"
                android:drawableTint="@color/black"
                android:text="âœ‹ Mark Present"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:elevation="6dp" />

            <!-- Refresh Button -->
            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/green_500"
                android:text="ðŸ”„ Refresh Sessions"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="4dp" />

            <!-- Back Button -->
            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/orange_700"
                android:text="â¬…ï¸ Back to Dashboard"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:elevation="4dp" />

            <!-- Logout Button -->
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="@color/red_500"
                android:text="ðŸšª Logout"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>