<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".SessionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Session Status Indicator -->
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/green_100"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/iv_session_indicator"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/loading_pic"
                android:contentDescription="Session Status"
                android:scaleType="centerInside" />
        </androidx.cardview.widget.CardView>

        <!-- Session Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/light_blue_50"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“š Session Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_500"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_session_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Session details will appear here..."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Session Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/green_50"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Session Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_700"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_session_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Creating session..."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Student Count Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/orange_50"
            android:layout_marginBottom="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¥ Attendance Statistics"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/orange_700"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_student_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class Strength: 0\nPresent: 0\nAbsent: 0\nAttendance: 0%"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btn_view_live_attendance"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/style_button"
            android:text="ðŸ‘€ View Live Attendance"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_refresh_count"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/style_button_secondary"
            android:text="ðŸ”„ Refresh Count"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_end_session"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="â¹ï¸ End Session"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/red_500"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>