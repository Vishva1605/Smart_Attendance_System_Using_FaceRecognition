<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".StudentDashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_background"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tv_welcome_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome, Student"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smart Attendance Dashboard"
                android:textSize="16sp"
                android:textColor="#E0E0E0"
                android:gravity="center" />

        </LinearLayout>

        <!-- Student Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¤ Student Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_student_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading student information..."
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Network Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¶ Network Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#F57C00"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_network_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Checking network connection..."
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Face Registration Button -->
        <Button
            android:id="@+id/bt_register_face"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_face_registration"
            android:text="ðŸ“¸ Register Face"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:elevation="4dp"
            android:drawableLeft="@drawable/ic_face"
            android:drawablePadding="8dp"
            android:gravity="center" />

        <!-- Check Active Sessions Button -->
        <Button
            android:id="@+id/btn_check_sessions"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_primary"
            android:text="Check Active Sessions"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:elevation="4dp"
            android:drawableLeft="@drawable/ic_session"
            android:drawablePadding="8dp"
            android:gravity="center" />

        <!-- View My Attendance Button -->
        <Button
            android:id="@+id/btn_view_my_attendance"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_secondary"
            android:text="ðŸ“Š View My Attendance"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:elevation="4dp"
            android:drawableLeft="@drawable/ic_chart"
            android:drawablePadding="8dp"
            android:gravity="center" />

        <!-- Reset Password Button -->
        <Button
            android:id="@+id/btn_reset_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_warning"
            android:text="ðŸ”‘ Reset Password"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:elevation="4dp"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="8dp"
            android:gravity="center" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_danger"
            android:text="ðŸšª Logout"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:elevation="4dp"
            android:drawableLeft="@drawable/icon_logout"
            android:drawablePadding="8dp"
            android:gravity="center" />

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smart Attendance System v1.0\nSAEC University"
            android:textSize="12sp"
            android:textColor="#757575"
            android:gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>