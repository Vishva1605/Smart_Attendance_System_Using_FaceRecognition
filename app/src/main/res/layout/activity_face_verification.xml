<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Instructions -->
        <TextView
            android:id="@+id/tv_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ” Face Verification"
            android:textSize="16sp"
            android:textColor="#333"
            android:background="#fff"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp" />

        <!-- Student Info -->
        <TextView
            android:id="@+id/tv_student_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¤ Student Information"
            android:textSize="14sp"
            android:textColor="#666"
            android:background="#fff"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp" />

        <!-- Face Comparison -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“· Registered Face"
                    android:textSize="12sp"
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <ImageView
                    android:id="@+id/iv_reference_face"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#ddd"
                    android:scaleType="centerCrop"
                    android:elevation="4dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textSize="16sp"
                android:textColor="#666"
                android:textStyle="bold"
                android:layout_marginHorizontal="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¸ Current Photo"
                    android:textSize="12sp"
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <ImageView
                    android:id="@+id/iv_current_face"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#ddd"
                    android:scaleType="centerCrop"
                    android:elevation="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Verification Status -->
        <TextView
            android:id="@+id/tv_verification_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#666"
            android:background="#fff"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Buttons -->
        <Button
            android:id="@+id/btn_capture_face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“¸ Capture Face for Verification"
            android:background="#4CAF50"
            android:textColor="#fff"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_verify_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”„ Try Again"
            android:background="#FF9800"
            android:textColor="#fff"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â¬…ï¸ Back"
            android:background="#757575"
            android:textColor="#fff"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
